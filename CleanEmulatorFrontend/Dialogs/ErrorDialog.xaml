<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="CleanEmulatorFrontend.Dialogs.ErrorDialog"
    WindowStartupLocation="CenterScreen"
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100">
    <StackPanel Margin="5" VerticalAlignment="Stretch">
        <TextBlock x:Name="MessageBlock" Margin="0,0,0,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <Button x:Name="BtnOk" Content="OK" Margin="0,0,5,0" Padding="8" Click="BtnOk_OnClick" />
    </StackPanel>
</Window>